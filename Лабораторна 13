    {
        "id": "1",
        "name": "\u0410\u043d\u0434\u0440\u0456\u0439",
        "age": "22"
    },
    {
        "id": "2",
        "name": "\u041e\u043b\u0435\u043a\u0441\u0430\u043d\u0434\u0440",
        "age": "21"
    }
]








-----------------------------------------------------------------------------------------------------------------------------------------------Приклад кодну Мололики Олександра -------------------------------------------------------------------------------------------------------------------------------------------------------------

import csv
import json

# Нові дані для додавання
new_data = [
    {"id": 3, "name": "Андрій", "age": 23},
    {"id": 4, "name": "Олександр", "age": 20}
]

# Функція переписування даних із JSON у CSV з додаванням нових рядків без дублювання
def json_to_csv(json_filename, csv_filename, new_data):
    try:
        # Читаємо дані з JSON файлу
        with open(json_filename, mode='r') as json_file:
            data = json.load(json_file)

        # Перевірка на дублювання за id (додаємо лише нові записи)
        existing_ids = {student['id'] for student in data}
        unique_new_data = [student for student in new_data if student['id'] not in existing_ids]

        # Додаємо нові, унікальні записи до даних
        data.extend(unique_new_data)

        # Записуємо об'єднані дані у CSV файл
        with open(csv_filename, mode='w', newline='') as csv_file:
            writer = csv.DictWriter(csv_file, fieldnames=["id", "name", "age"])
            writer.writeheader()  # Записуємо заголовки
            writer.writerows(data)  # Записуємо рядки даних
        print(f"Дані з {json_filename} успішно переписані в {csv_filename} з доданими новими рядками")
    except IOError as e:
        print(f"Помилка роботи з файлами: {e}")
    except json.JSONDecodeError as e:
        print(f"Помилка декодування JSON: {e}")

# Викликаємо функцію
json_to_csv("students.json", "students.csv", new_data)






